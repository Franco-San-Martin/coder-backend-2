# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de la base de datos (MongoDB)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=mi_base_de_datos
DB_USER=mi_usuario     # Solo si tu base de datos requiere autenticación
DB_PASS=mi_contraseña  # Solo si tu base de datos requiere autenticación

# Configuración de JWT (JSON Web Token)
JWT_SECRET=mi_secreto_super_secreto
JWT_EXPIRES_IN=1d

# Configuración de bcrypt
SALT_ROUNDS=10

# Configuración de nodemailer para enviar correos (opcional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=mi_usuario@example.com
EMAIL_PASS=mi_contraseña_secreta

# Configuración de cookies
COOKIE_SECRET=mi_secreto_para_cookies

# Configuración de Stripe u otros servicios de pago (opcional)
STRIPE_SECRET_KEY=mi_clave_secreta_de_stripe
